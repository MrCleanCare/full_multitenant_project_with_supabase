services:
  - type: web
    name: cleaning-multitenant-platform
    env: static
    staticPublishPath: public
    buildCommand: ""
    routes:
      - type: rewrite
        source: /client/.*  # dynamic client pages
        destination: /client/index.html
      - type: rewrite
        source: /admin/.*   # admin dashboard
        destination: /admin/index.html
      - type: rewrite
        source: /.*         # fallback to index
        destination: /index.html
